{
  "name": "kynx/saiku-client",
  "description": "Client for Saiku's REST API",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Matt Kynaston",
      "email": "matt@kynx.org"
    }
  ],
  "keywords":[
    "saiku",
    "analytics",
    "bi",
    "business intelligence",
    "report",
    "chart"
  ],
  "autoload": {
    "psr-4": {
      "Kynx\\Saiku\\":"src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "KynxTest\\Saiku\\":"test/"
    }
  },
  "require": {
    "php":">=7.1",
    "ext-json":"*",
    "guzzlehttp/guzzle": "^6.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5",
    "psr/container": "^1.0",
    "zendframework/zend-coding-standard": "^1.0"
  },
  "suggest": {
    "psr/container": "Container implementation for factory-based configuration"
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "check": [
      "@cs-check",
      "@test"
    ],
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
    "upload-coverage": "coveralls -v"
  }
}
